head
    - var isProd = process.env.NODE_ENV==='production';
    - var assetsUrl = isProd ? '/static/manage/web/' : '/';
    meta(charset="UTF-8")
    meta(name="viewport",content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no")
    link(rel="shortcut icon", type="image/ico", href=`${assetsUrl}static/img/favicon.ico`)
    link(rel="Bookmark", type="image/ico", href=`${assetsUrl}static/img/favicon.ico`)
    link(rel="icon", type="image/ico", href=`${assetsUrl}static/img/favicon.ico`)
    title #{title}
    script(src=`${assetsUrl}static/js/flexible.js`)
